<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ThemSuaKeHoachActivity"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/md_yellow_800"
        >
        <ImageView
            android:id="@+id/image_back"
            android:src="@drawable/back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:tint="@color/white"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="24dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="THÊM KẾ HOẠCH"
            android:layout_marginStart="60dp"
            android:padding="12dp"

            android:textColor="@android:color/white"
            android:textSize="16sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên kế hoạch"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/et_plan_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="11/11/2000 (CN)"
                android:focusable="false"
                android:minHeight="48dp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mục tiêu"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_target_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Chưa nhập"
            android:autofillHints="@color/md_yellow_800"
            android:textSize="14sp"
            android:minHeight="48dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiến độ hiện tại"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_current_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="50%"
            android:inputType="numberDecimal"
            android:textSize="16sp"
            android:minHeight="48dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btnThemKeHoach"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:text="Thêm"
        android:backgroundTint="@color/md_cyan_800"
        android:textColor="@android:color/white"
        android:padding="12dp" />


</LinearLayout>